@model IEnumerable<Project.Domain.Product>

@{
    ViewBag.Title = "Product";
}

<h2>What kind of product do you want to create? </h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="alert-success">@TempData["Deleted"]</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>@Html.DisplayNameFor(m => m.Price)</th>*@
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "ProductDetails", "Product", new { id = item.Id }, null)
            </td>
            @*<td>@Html.DisplayFor(modelItem => item.Price)</td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>

        </tr>
    }

</table>
<p>
    @Html.ActionLink("Logout", "Logout", "Login")
</p>
